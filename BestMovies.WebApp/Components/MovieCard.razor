@using BestMovies.Shared.Dtos.Movies
@using BestMovies.WebApp.Repositories

<MudCard Outlined="true">
    <div style="position: relative" class="d-flex justify-center rounded-lg">
        @if (Movie is null)
        {
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="@($"{Height}px")" Width="@($"{Width}px")" />
        }
        else
        {
            <MudImage Class="rounded-sm" ObjectFit="@ObjectFit.Cover" Height="@Height" Width="@Width" Src="@($"api/movies/{Movie.Id}/image?size={ImageSize}")" Alt="@Movie.Title" />

            <MudPaper Class="card-overlay-footer cursor-pointer">
                <div class="d-flex flex-column justify-space-between">
                    <div class="d-flex flex-row align-start justify-space-between pa-2">
                        <MudText Typo="Typo.subtitle1" Align="Align.Start"><strong>@Movie.Title</strong></MudText>
                        <MudIcon Color="Color.Dark" Icon="@Icons.Material.Filled.KeyboardArrowUp"/>
                    </div>

                    <div class="d-flex flex-row flex-wrap gap-2 justify-center px-4 pb-2" style="overflow-x: hidden;">
                        @foreach (var genre in Movie.Genres.Take(3))
                        {
                            <MudText Color="Color.Dark" Typo="Typo.caption">@genre</MudText>
                        }
                    </div>
                </div>
            </MudPaper>
        } 
    </div>
</MudCard>


@code {
        private const string ImageSize = "w780";

    [Parameter]
    public int Height { get; set; } = 192;
    
    [Parameter]
    public int Width { get; set; } = 320;
    
    [Parameter]
    public SearchMovieDto? Movie { get; set; }
}