@using BestMovies.Shared.Dtos.Movies

<MudPaper Class="d-flex flex-column gap-2 pa-2" Style="background-color: transparent;" Elevation="0">
    @if (Title is not null)
    {
        <MudText Typo="Typo.h6" Align="Align.Start"> @Title </MudText>
    }
    
    <div class="d-flex flex-row justify-start gap-4" style="overflow-x: auto">
        @if (ShowMessageIfEmpty && Movies?.Any() is false)
        {
            <MudCard Outlined="true">
                <MudAlert NoIcon="true" Severity="Severity.Normal">You did not add any movie to your list yet.</MudAlert>
            </MudCard>
        }
        else if (Movies is null || !Movies.Any())
        {
            for (var i = 0; i < SkeletonCardsCount; i++)
            {
                <MudCard Outlined="true">
                    <MudSkeleton Class="rounded" SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="@($"{CardHeight}px")" Width="@($"{CardWidth}px")"/>
                </MudCard>
            }
        }
        else
        {
            foreach (var movie in Movies)
            {
                <MovieCard Movie="movie" Width="@CardWidth" Height="@CardHeight"/>
            }
        }
    </div>
</MudPaper>


@code {
        private const int CardHeight = 180;
        private const int CardWidth = 280;
    
    [Parameter]
    public bool ShowMessageIfEmpty { get; set; }

    [Parameter]
    public string? Title { get; set; } 
    
    [Parameter] 
    public IEnumerable<SearchMovieDto>? Movies { get; set; }

    [Parameter] 
    public int SkeletonCardsCount { get; set; } = 4;
}